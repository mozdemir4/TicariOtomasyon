@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "DepartmanPersonelSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4 class="mt-4">Personel Satış</h4>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Personel: @ViewBag.person </li>
</ol>
<table class="table table-hover">
    <thead>
        <tr>
          
            <th>Ürün</th>
            <th>Cari</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Yazdır</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Urun.UrunAd</td>
                <td>@x.Cari.CariAd @x.Cari.CariSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Tarih.ToShortDateString()</td>
                <td><a href="#" class="btn btn-success">Yazdır</a></td>
            </tr>
        }
    </tbody>
</table>
