@using TicariOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h4 class="mt-4">Departman Detay</h4>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.dept Departmanı</li>
</ol>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Personel ID</th>
            <th>Personel Ad</th>
            <th>Personel Soyad</th>
            <th>Görsel</th>
            <th>Satışlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.PersonelID</td>
                <td>@x.PersonelAd</td>
                <td>@x.PersonelSoyad</td>
                <td><img  src="@x.PersonelGorsel" style="width:95px; height:65px"/></td>
                <td><a href="/Departman/DepartmanPersonelSatis/@x.PersonelID" class="btn btn-primary">Satışlar</a></td>
            </tr>
        }
    </tbody>
</table>
