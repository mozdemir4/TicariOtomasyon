@model TicariOtomasyon.Models.Siniflar.Departman
@{
    ViewBag.Title = "DepartmanGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h5>Departman Güncelleme Sayfası</h5>
@using (Html.BeginForm("DepartmanGuncelle", "Departman", FormMethod.Post))
{
    @Html.HiddenFor(x => x.DepartmanID);
    <label>Departman Adı</label>
    @Html.TextBoxFor(x => x.DepartmanAd, new { @class = "form-control" })
    <button style="margin: 5px 0 0 0" class="btn btn-outline-primary">Güncelle</button>
}

