@using TicariOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "CariDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4 class="mt-4">Cari Satın Alma Geçmişi</h4>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Müşteri: @ViewBag.adsoyad </li>
</ol>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Yazdır</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.SatisID</td>
                <td>@x.Urun.UrunAd</td>  
                <td>@x.Personel.PersonelAd @x.Personel.PersonelSoyad</td>
                <td>@x.Adet</td>
                <td>@x.Fiyat</td>
                <td>@x.ToplamTutar</td>
                <td>@x.Tarih.ToShortDateString()</td>
                <td><a href="#" class="btn btn-success">Yazdır</a></td>
            </tr>
        }
    </tbody>
</table>

