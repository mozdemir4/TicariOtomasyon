@using TicariOtomasyon.Models.Siniflar
@model List<Cari>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h5>Cari Lİstesi</h5>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Cari ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Şehir</th>
            <th>Mail</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.CariID</td>
                <td>@x.CariAd</td>
                <td>@x.CariSoyad</td>
                <td>@x.CariSehir</td>
                <td>@x.CariMail</td>
                <td><a href="/Cari/CariSil/@x.CariID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Cari/CariGuncelle/@x.CariID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Cari/CariDetay/@x.CariID" class="btn btn-info">Alım Geçmişi</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Cari/CariEkle" class="btn btn-outline-primary">Cari Ekle</a>


